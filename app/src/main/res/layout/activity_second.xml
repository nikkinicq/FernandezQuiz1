<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdfd96"
    tools:context="com.fernandez.fernandezquiz1.SecondActivity">

    <TextView
        android:id="@+id/CSHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:text="BACHELOR OF SCIENCE IN COMPUTER SCIENCE
        (4 years)"
        android:textAlignment="center"
        android:textSize="28px" />

    <TextView
        android:id="@+id/CSCredentials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnHome"
        android:layout_alignStart="@+id/btnHome"
        android:layout_below="@+id/CSHeader"
        android:layout_marginTop="22dp"
        android:layout_gravity="center_horizontal"
        android:text="Level I accredited by the Philippine Accrediting Association of Schools, Colleges, and Universities"
        android:layout_alignRight="@+id/CSHeader"
        android:layout_alignEnd="@+id/CSHeader" />

    <TextView
        android:id="@+id/CSDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/CSHeader"
        android:layout_alignLeft="@+id/CSCredentials"
        android:layout_alignRight="@+id/CSHeader"
        android:layout_alignStart="@+id/CSCredentials"
        android:layout_below="@+id/CSCredentials"
        android:layout_marginTop="45px"
        android:text="Students under the BS Computer Science program are highly trained for software and system development. The programâ€™s main focus is to expose the students to different approaches and styles in developing programs whether they are procedural or the object oriented type of system approach." />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:onClick="callMainActivity"
        android:text="Home"
        android:layout_alignBaseline="@+id/btnITProgram"
        android:layout_alignBottom="@+id/btnITProgram"
        android:layout_alignLeft="@+id/CSHeader"
        android:layout_alignStart="@+id/CSHeader"
        android:layout_marginStart="15dp" />

    <Button
        android:id="@+id/btnITProgram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100px"
        android:layout_toRightOf="@+id/btnHome"
        android:onClick="callThirdActivity"
        android:text="IT Program"
        android:textColor="#3da13d" />

    <Button
        android:id="@+id/btnISProgram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100px"
        android:layout_toRightOf="@+id/btnITProgram"
        android:onClick="callFourthActivity"
        android:text="IS Program"
        android:textColor="#FFA500" />
</RelativeLayout>
